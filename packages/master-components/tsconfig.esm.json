// https://www.npmjs.com/package/tsconfig-moon
{
  "extends": "tsconfig-moon/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "outDir": "esm",
    "rootDir": "src",
    "lib": ["dom"],
    "noImplicitReturns": false,
    "verbatimModuleSyntax":false,
  },
  "include": [
    "src/**/*",
    "types/**/*"
  ]
}