  "compilerOptions": {
    "jsx": "react-jsx",
    "noEmit": false,
    "emitDeclarationOnly": true,
    "outDir": "esm",
    "declaration": true,
  },
  "include": [
    "packages/master-components/src/**/*",
    "tests/**/*",
    "types/**/*"
  ],
}